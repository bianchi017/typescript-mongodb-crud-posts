<div class="row">

    {{#each posts}}
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h3>
                    <center>{{title}}</center>
                </h3>
                <p>{{content}}</p>
                <p>
                <h6>Category: {{category}}</h6>
                </p>
            </div>
            <hr class="my-2">
            <div class="card-body">
                <h6>
                    <center>Comments</center>
                </h6>
                <p>{{comment}}</p>
            </div>
            <div class="card-footer justify-content-between align-items-center text-center">
                <a href="/posts/delete/{{_id}}" class="btn btn-danger">
                    Delete
                </a>
                <a href="/posts/comment/{{_id}}" class="btn btn-success">
                    Comment
                </a>
                <a href="/posts/edit/{{_id}}" class="btn btn-primary">
                    Edit
                </a>
            </div>
        </div>
        .p-4
    </div>
    {{/each}}
</div>