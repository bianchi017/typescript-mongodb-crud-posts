<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form action="/posts/comment/{{post._id}}" method="POST">
                    <div class="form-group">
                        <label for="comment">Comment:</label>
                        <textarea class="form-control" name="comment" rows="5" id="comment" required></textarea>
                    </div>
                    <div class="card-footer justify-content-between align-items-center text-center">
                        <button type="submit" class="btn btn-success">
                            Confirm
                        </button>
                        <button type="reset" class="btn btn-danger">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>